<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board" >

	<select id="listCount" resultType="integer">
		select count(*) from board
	</select>

	<select id="articles" resultType="com.care.board.dto.BoardDTO" parameterType="com.care.board.pagination.Pagination">
		select * from board order by board_num desc limit #{startIndex}, #{pageSize}
	</select>
	
	<insert id="insertArticle" parameterType="com.care.board.dto.BoardDTO">
		insert into board(title, content, writer_id) values(#{title}, #{content}, #{writerId})
	</insert>
	
	<select id="selectArticle" parameterType="String" resultType="com.care.board.dto.BoardDTO">
		select * from board where board_num=#{boardNum} 
	</select>
	
</mapper>